{
  "name": "bot",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest --detectOpenHandles --colors",
    "precommit": "lint-staged",
    "watch": "tsc -w"
  },
  "engines": {
    "node": "10"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/qrcode": "^1.3.4",
    "@types/uuid": "^7.0.3",
    "date-fns": "^2.14.0",
    "ethers": "^4.0.47",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^3.24.1",
    "firebase-functions-test": "^0.2.1",
    "otplib": "^12.0.1",
    "ptokens-pbtc": "^0.4.2",
    "qrcode": "^1.4.4",
    "telegraf": "^3.38.0",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "ts-jest": "^25.5.1",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
